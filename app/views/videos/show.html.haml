%article.video
  .container
    .row
      .video_large_cover.col-sm-7.col-sm-offset-1
        %video#a240e92d.sublime{"data-uid" => "a240e92d", height: "360", poster: "#{image_tag @video.large_cover_url}", preload: "none", title: "Midnight Sun", width: "640"}
          %source{src: "#{@video.video_url}"}
          %source{"data-quality" => "hd", src: "#{@video.video_url}"}
          %source{src: "#{@video.video_url}"}
          %source{"data-quality" => "hd", src: "#{@video.video_url}"}
      .video_info.col-sm-3
        %header
          %h3=@video.title
          %h4=@video.category.category
          %span Rating: 
          = @video.rating
        %p=@video.video_description
        .actions  
          = link_to "+ My Queue", queue_items_path(video_id: @video.id), method: :post, :class =>"btn btn-default" unless current_user.queued_video?(@video)
%section.reviews.container
  .row
    .col-sm-10.col-sm-offset-1
      = form_for [@video, Review.new] do |f|
        %fieldset
          .form-group
            %label Rate this video
            =f.select :rating, options_for_video_reviews
            .row
              .col-sm-3
          .form-group
            %label Write Review
            .row
              .col-sm-8
                = f.text_area :content, rows: 6, class: "form-control"
        %fieldset.form-group.actions.clearfix
          %input(type="submit" value="Submit" class="btn btn-primary")
          = link_to "Cancel", @video
      %header
        %h3 User Reviews (#{@reviews.count})
      %ul
        - @reviews.each do |review|
          %article.review
            %li.row
              .col-sm-2
                %span Rating: #{review.rating} / 5
                %p 
                  by 
                  = link_to review.user.full_name, review.user
              .col-sm-8
                %p= review.content
