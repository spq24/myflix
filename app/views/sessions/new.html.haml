%section.sign_in.container
  .row
    .col-sm-10.col-sm-offset-1
      = form_tag sessions_path, class: 'sign_in' do
        %header
          %h1 Sign in
        %fieldset
          .form-group
            = label_tag :email
            .row
              .col-sm-4
            = email_field_tag :email, params[:email] || ''
          .form-group
            = label_tag :password 
            .row
              .col-sm-4
            = password_field_tag :password, params[:password] || ''
        %fieldset.form-group.action
          %input(type="submit" value="Sign in" class="btn btn-default")
          = link_to "Forgot Your Password?", forgot_password_path


