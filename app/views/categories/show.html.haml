%section.genre
  %header.clearfix
    %h1=@category.category
    .genre_sorting
      Sort by:
      %select(name="")
        %option(value="a-z") Title: A - Z
        %option(value="z-a") Title: Z - A
        %option(value="rating") Rating
  %article.row
    -@videos.each do |video|
      .video.col-sm-2
        = link_to image_tag(video.small_cover_url), category_video_path(@category, video), nil