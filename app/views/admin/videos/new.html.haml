%section.admin_add_video
  .container
    .row
      .col-md-10.col-md-offset-1
        = bootstrap_form_for [:admin, @video], style: :horizontal, left: "col-sm-3" , right: "col-sm-6", html: {multipart: true} do |f|
          %ul.nav.nav-tabs
            %li.active
              = link_to "Add a New Video", new_admin_video_path
            %li
              = link_to "Recent Payments", admin_payments_path
            %li
              = link_to "Categories", admin_categories_path
          %br
          %fieldset
            .form-group
              = f.text_field :title, label: "Title", class: "col-sm-3"
            .form-group
              =f.select :category_id, options_for_select(Category.all.map {|category| [category.category, category.id]}), label: "Category", class: "control-label col-sm-6"
            .form-group
              =f.text_area :video_description, rows: 8, label: "Description", class: "col-sm-6"
              =f.file_field :large_cover, class: "btn btn-file"
              =f.file_field :small_cover, class: "btn btn-file"
              =f.file_field :video_url, label: "Video URL", class: "btn btn-file"

          %fieldset.actions.form-group
            .col-sm-6.col-md-offset-3
              %input(type="submit" value="Add Video" class="btn btn-default")
